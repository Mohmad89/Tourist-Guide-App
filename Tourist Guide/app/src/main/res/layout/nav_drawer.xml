<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_nav_2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:src="@drawable/tourist_guide_logos_transparent"
        android:onClick="ClickLogo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tourist Guide"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/lobster_regular"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="16dp"
        android:background="@color/black"/>
    <TextView

            android:onClick="ClickHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/black"

            android:fontFamily="@font/bungee_regular"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_baseline_home_24"
            android:textSize="18sp"
            android:layout_margin="15dp"/>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textSize="18sp"

        android:fontFamily="@font/bungee_regular"
        android:textColor="@color/black"
        android:onClick="ClickProfile"
        android:layout_margin="15dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"/>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:textSize="18sp"
        android:fontFamily="@font/bungee_regular"
        android:textColor="@color/black"
        android:onClick="ClickWeather"
        android:layout_margin="15dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_cloudy"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aboutus"
        android:layout_margin="15dp"
        android:onClick="ClickAboutUs"
        android:textSize="18sp"
        android:fontFamily="@font/bungee_regular"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:drawablePadding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="18sp"
        android:onClick="ClickLogout"
        android:layout_margin="15dp"
        android:fontFamily="@font/bungee_regular"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_baseline_logout_24"
        android:drawablePadding="10dp"/>






</LinearLayout>