<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:id="@+id/drawer_layout">
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">

 <include
  layout="@layout/tollbar_navigationdrawer"
     android:id="@+id/toolbar"/>


   <de.hdodenhof.circleimageview.CircleImageView
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:layout_below="@+id/toolbar"
       android:src="@drawable/user_profile"
       android:id="@+id/imageView_profile"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="30dp"
       />

    <TextView
        android:fontFamily="@font/bungee_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mohammad"
        android:textColor="@color/black"
        android:layout_below="@+id/imageView_profile"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:id="@+id/userName_profile"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName_profile"
        android:text="TouristGuide"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        />

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/profile_ui_design"
        android:layout_below="@+id/title"
        android:layout_marginTop="-30dp"
        />

 <TextView
     android:id="@+id/My_profile"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/background"
     android:layout_marginLeft="50dp"
     android:layout_marginTop="50dp"
     android:drawableLeft="@drawable/ic_user"
     android:drawablePadding="10dp"
     android:text="My Profile"
     android:textColor="@color/black"
     android:textSize="18sp"
     android:textStyle="bold" />

 <TextView
     android:id="@+id/email_profile"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/My_profile"
     android:layout_marginLeft="50dp"
     android:layout_marginTop="30dp"
     android:drawableLeft="@drawable/ic_baseline_email_24"
     android:drawablePadding="10dp"
     android:text="example@gmail.com"
     android:textColor="@color/black"
     android:textSize="18sp"
     android:textStyle="bold" />

 <TextView
     android:id="@+id/phone_profile"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/email_profile"
     android:layout_marginLeft="50dp"
     android:layout_marginTop="30dp"
     android:drawableLeft="@drawable/ic_baseline_local_phone_24"
     android:drawablePadding="10dp"
     android:text="079855524"
     android:textColor="@color/black"
     android:textSize="18sp"
     android:textStyle="bold" />
 <TextView
     android:id="@+id/setting_profile"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/phone_profile"
     android:layout_marginLeft="50dp"
     android:layout_marginTop="30dp"
     android:drawableLeft="@drawable/ic_baseline_settings_24"
     android:drawablePadding="10dp"
     android:text="Setting"
     android:textColor="@color/black"
     android:textSize="18sp"
     android:textStyle="bold" />

 <TextView
     android:id="@+id/logout_profile"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/setting_profile"
     android:layout_marginLeft="50dp"
     android:layout_marginTop="30dp"
     android:drawableLeft="@drawable/ic_baseline_logout_24"
     android:drawablePadding="10dp"
     android:text="LOGOUT"
     android:textColor="@color/black"
     android:textSize="18sp"
     android:textStyle="bold" />


</RelativeLayout>
 <RelativeLayout
     android:layout_width="300dp"
     android:layout_height="match_parent"
     android:layout_gravity="start"
     android:background="@color/white">
  <include
      layout="@layout/nav_drawer"/>
 </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>